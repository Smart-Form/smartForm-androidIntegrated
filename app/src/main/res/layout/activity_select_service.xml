<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectServiceActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_titleStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.075" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_titleEnd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.925" />

    <TextView
        android:id="@+id/back"

        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:text="Select Your Welfare"
        android:foreground="?android:attr/selectableItemBackground"
        android:autoSizeTextType="uniform"
        android:textColor="#000000"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/guideline_titleStart"
        app:layout_constraintEnd_toStartOf="@id/imgBtn_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_bias="0.025"
        />

    <ImageButton
        android:id="@+id/imgBtn_profile"

        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:src="@drawable/ic_baseline_account_box_24"
        android:tint="#D3AC9C"
        android:backgroundTint="#FFFFFF"
        android:foreground="?android:attr/selectableItemBackground"

        app:layout_constraintEnd_toEndOf="@id/guideline_titleEnd"
        app:layout_constraintTop_toTopOf="@id/back"
        />

    <Button
        android:id="@+id/all_form"

        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_percent="0.2"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintStart_toStartOf="@+id/guideline_titleStart"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="ALL"
        android:gravity="center_horizontal|center"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:backgroundTint="#D3AC9C"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.0125"
        />

    <Button
        android:id="@+id/gov_form"

        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_percent="0.2"

        android:layout_marginStart="10dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintStart_toEndOf="@+id/all_form"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="GOV"
        android:gravity="center_horizontal|center"
        android:textColor="#000000"
        android:backgroundTint="#CCCCCC"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.0125"
        />

    <Button
        android:id="@+id/ngo_form"

        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_percent="0.2"

        android:layout_marginStart="10dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintStart_toEndOf="@+id/gov_form"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="NGO"
        android:gravity="center_horizontal|center"
        android:textColor="#000000"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:backgroundTint="#CCCCCC"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.0125"
        />

    <Button
        android:id="@+id/cha_form"

        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_percent="0.2"

        android:layout_marginStart="10dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintStart_toEndOf="@+id/ngo_form"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="CHA"
        android:gravity="center_horizontal|center"
        android:textColor="#000000"
        android:backgroundTint="#CCCCCC"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:cornerRadius="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.0125"
        />








    <ScrollView
        android:id="@+id/scroll_view_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:fillViewport="true"
        android:visibility="visible"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_service"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_view_gov"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:fillViewport="true"
        android:visibility="invisible"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_gov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_service_gov"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_view_ngo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:fillViewport="true"
        android:visibility="invisible"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_ngo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_service_ngo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_view_cha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:fillViewport="true"
        android:visibility="invisible"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_cha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_service_cha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

